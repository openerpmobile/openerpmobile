<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null" >

    <ImageView
        android:id="@+id/list_img_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/desc_list_bar"
        android:src="@drawable/list_bar"
        android:background="@null" />

    <ImageView
        android:id="@+id/list_img_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_img_bar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:contentDescription="@string/desc_list_person"
        android:src="@drawable/list_person" />

    <TextView
        android:id="@+id/list_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/list_img_person"
        android:layout_toRightOf="@+id/list_img_person"
        android:layout_marginTop="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name" />

    <TextView
        android:id="@+id/list_text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_img_bar"
        android:layout_toRightOf="@+id/list_img_person"
        android:layout_marginBottom="5dp"
        android:text="Email"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>